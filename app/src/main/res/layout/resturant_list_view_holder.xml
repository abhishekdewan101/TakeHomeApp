<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewHolderBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/resturant_list_view_holder_background_blue">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="8">

        <LinearLayout
            android:id="@+id/resturantNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resturantName"
                style="@style/text_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                tools:text="Resturant Name"
                android:layout_weight="5"/>

            <ImageView
                android:id="@+id/resturantImage"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:layout_toRightOf="@id/resturantName"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                tools:src="@drawable/search" />

        </LinearLayout>

        <TextView
            android:id="@+id/resturantDescription"
            style="@style/text_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/resturantNameLayout"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/resturantNameLayout"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            tools:text="Description" />

        <TextView
            android:id="@+id/resturantTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delievery Time"
            style="@style/text_medium"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/resturantDescription"
            android:layout_alignStart="@id/resturantDescription"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/resturantTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 mins"
            style="@style/text_regular"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:layout_alignEnd="@id/resturantTime"
            android:gravity="center"
            android:layout_below="@id/resturantTime"
            android:layout_alignStart="@id/resturantTime"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/resturantCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost Range"
            style="@style/text_medium"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/resturantDescription"
            android:layout_toRightOf="@id/resturantTime"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/resturantCostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            style="@style/text_regular"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:layout_alignEnd="@id/resturantCost"
            android:gravity="center"
            android:layout_below="@id/resturantTime"
            android:layout_alignStart="@id/resturantCost"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/resturantSurgePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surge Price"
            style="@style/text_medium"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/resturantDescription"
            android:layout_toRightOf="@id/resturantCost"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/resturantSurgePriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"
            style="@style/text_regular"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:layout_alignEnd="@id/resturantSurgePrice"
            android:gravity="center"
            android:layout_below="@id/resturantTime"
            android:layout_alignStart="@id/resturantSurgePrice"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:id="@+id/ratingText"
            style="@style/text_condensed_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:text="5.0"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ratingCount"
            style="@style/text_condensed_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingText"
            android:layout_centerInParent="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="1123 ratings"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

    </RelativeLayout>


</LinearLayout>